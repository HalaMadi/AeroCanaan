generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @map("_id") @default(auto()) @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  mobile    String   @unique
  password  String
  role      Role     @default(USER)
  bookings  Booking[]
}

model Trip {
  id             String    @id @map("_id") @default(auto()) @db.ObjectId
  title          String
  slug           String
  location       String
  duration       Int
  start_date     DateTime
  end_date       DateTime
  price          Float
  originalPrice  Float?
  discountPrice  Float?
  seats          Int
  image          String
  rating         Int
  featured       Boolean   @default(false)
  description    String?
  isFeatured     Boolean   @default(false)
  isSpecialOffer Boolean   @default(false)
  hasDiscount    Boolean   @default(false)
  bookings       Booking[]
  placeId        String?   @db.ObjectId
  place          Place?    @relation(fields: [placeId], references: [id])
}

model Booking {
  id     String        @id @map("_id") @default(auto()) @db.ObjectId
  userId String        @db.ObjectId
  tripId String        @db.ObjectId
  status BookingStatus @default(PENDING)
  user   User?         @relation(fields: [userId], references: [id])
  trip   Trip?         @relation(fields: [tripId], references: [id])
}

model Place {
  id                     String  @id @map("_id") @default(auto()) @db.ObjectId
  name                   String
  slug                   String  @unique
  category               String
  shortDesc              String
  fullDesc               String
  location               String
  bestTimeToVisit        String
  accessibilityInfo      String
  historicalSignificance String?
  culturalImportance     String?
  localTips              String
  images                 Image[]
  trips                  Trip[]
}

model Image {
  id      String @id @map("_id") @default(auto()) @db.ObjectId
  url     String
  placeId String @db.ObjectId
  place   Place  @relation(fields: [placeId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
