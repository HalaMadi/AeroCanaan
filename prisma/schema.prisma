generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  role     Role      @default(USER)
  bookings Booking[]
}

model Trip {
  id          String    @id @default(uuid())
  name        String
  destination String
  duration    Int
  start_date  DateTime
  end_date    DateTime
  price       Float
  seats       Int
  bookings    Booking[]
}

model Booking {
  id     String        @id @default(uuid())
  user   User          @relation(fields: [userId], references: [id])
  userId String
  trip   Trip          @relation(fields: [tripId], references: [id])
  tripId String
  status BookingStatus @default(PENDING)
}

enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
